{
    "compilerOptions": {
        "outDir": "js",
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom", "es2017"
        ]
    },
    "files": [
        "src/main.ts",
        "src/main-dev.ts"
    ],
    "angularCompilerOptions": {
        "annotationsAs": "decorators",
        "genDir": "aot",
        "preserveWhitespace": false,
        "skipMetadataEmit" : true
    }
}